
CODE SEGMENT
ASSUME CS :CODE , DS :CODE ,ES :CODE ,SS :CODE


PPIC_C EQU 1EH
PPIC EQU 1CH
PPIB EQU 1AH
PPIA EQU 18H
 KEY EQU 01H
ORG 1000H

MOV AL , 80H
OUT PPIC_C , AL
;
 L2:
MOV AL , 80H
OUT PPIC , AL

MOV AL , 0FFH
OUT PPIA , AL

;
MOV AL , 0FEH
OUT PPIB , AL
L1: MOV BL, AL
     STC
     ROL AL, 1
     ROL BL, 1

     OUT PPIC, AL
     MOV AL, BL
     OUT PPIB, AL


CALL TIMER
      JC L1
     JMP L2
     INT 3
     ;
     
TIMER :
       MOV CX , 0FFFFH
 TIMER1:     NOP
       NOP
       NOP
       NOP
       LOOP TIMER1
       RET

       CODE ENDS
       END
       
